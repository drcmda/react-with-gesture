{
  "name": "@use-gesture/root",
  "version": "0.0.0",
  "description": "React hook for receiving gestures https://use-gesture.netlify.app",
  "license": "MIT",
  "private": true,
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install && preconstruct dev",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "dev": "preconstruct dev",
    "validate": "preconstruct validate",
    "lint": "pretty-quick --staged",
    "release": "pnpm build && pnpm run changeset publish",
    "tsc": "tsc --noEmit",
    "demo:dev": "pnpm run dev --filter demo",
    "demo:build": "pnpm workspace demo build",
    "test": "jest test",
    "test:watch": "jest test --watchAll",
    "size": "size-limit",
    "size:analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "name": "@use-gesture/core",
      "path": "packages/core/dist/use-gesture-core.cjs.prod.js",
      "limit": "9 KB"
    },
    {
      "name": "@use-gesture/react",
      "path": "packages/react/dist/use-gesture-react.cjs.prod.js",
      "limit": "10 KB",
      "ignore": [
        "react"
      ]
    },
    {
      "name": "@use-gesture/vanilla",
      "path": "packages/vanilla/dist/use-gesture-vanilla.cjs.prod.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "./src",
      "./test"
    ],
    "setupFilesAfterEnv": [
      "./setupPointerEvent.js"
    ],
    "setupFiles": [
      "@testing-library/react/dont-cleanup-after-each"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/cli": "^2.16.0",
    "@preconstruct/cli": "^2.0.7",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.24.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.7.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.8.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^4.10.2",
    "typescript": "^4.2.4"
  }
}
